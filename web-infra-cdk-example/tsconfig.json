{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019",
    "outDir": "dist"
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["cdk.out", "dist", "node_modules"]
}
